@model Food

<h2 style="color:#9A1750">@Model.DishName</h2>
<hr />

<div class="col-md-6">
    <div class="card-deck">
        <div class="card shadow">
            <img class="card-img-top img-thumbnail" src="@Model.ImageUrl" />
            <div class="card-body">
                <h3 class="pull-right" style="color:#E3AFBC">@Model.Price</h3>
                <h4 class="card-title" style="color:#9A1750">@Model.DishName</h4>
                <p class="card-text">@Model.LongDescription</p>
                <div>
                    <a class="lnk btn btn-outline-secondary" asp-controller="Food" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>